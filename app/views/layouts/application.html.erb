<!DOCTYPE html>
<html>
<head>
  <title>LoopMe</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<style media="screen">
a:visited,a:hover, a:active {
  color: white;
  text-decoration: none;
}
</style>



<body>

  <nav>
    <div class="nav-wrapper " style="background-color: #00AEFF;">


      <%= link_to "LoopMe", root_path, id:"home", :class => "brand-logo center",
       :style => "padding-left:2cm;",
       :onmouseover=>"this.style.color='#FFB459';this.style.textDecoration='none';",
       :onmouseout=>"this.style.color='white';"%>
       <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="fa fa-bars"> </i></a>


      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <% if current_user %>
            <ul>
              <li><%= current_user.first_name %></li>
              <li><%= link_to "Log out", logout_path, method: "delete",
              :style => "font-size:12px;",
              :onmouseover=>"this.style.color='#FFB459';this.style.textDecoration='none';",
              :onmouseout=>"this.style.color='white';"%></li>
            </ul>
            <% else %>
            <ul>
              <li><%= link_to "Login", 'login',
              :style => "font-size:20px;",
              :onmouseover=>"this.style.color='#FFB459';this.style.textDecoration='none';",
              :onmouseout=>"this.style.color='white';"%></a></li>
              <li><%= link_to "Signup", 'signup',
              :style => "font-size:12px;",
              :onmouseover=>"this.style.color='#FFB459';this.style.textDecoration='none';",
              :onmouseout=>"this.style.color='white';" %></a></li>
            </ul>
            <% end %>
      </ul>
      <ul class="side-nav cyan darken-1" id="mobile-demo">
        <% if current_user %>
            <ul>
              <li><%= current_user.first_name %></li>
              <li><%= link_to "Log out", logout_path, method: "delete",
              :style => "font-size:12px;",
              :onmouseover=>"this.style.color='#FFB459';this.style.textDecoration='none';",
              :onmouseout=>"this.style.color='white';"
              %></li>
            </ul>
            <% else %>
            <ul>
              <li><%= link_to "Login", 'login',
              :style => "font-size:20px;",
              :onmouseover=>"this.style.color='#FFB459';this.style.textDecoration='none';",
              :onmouseout=>"this.style.color='white';"
              %></a></li>
              <li><%= link_to "Signup", 'signup',
              :style => "font-size:12px;",
              :onmouseover=>"this.style.color='#FFB459';this.style.textDecoration='none';",
              :onmouseout=>"this.style.color='white';"
              %></a></li>
            </ul>
            <% end %>
      </ul>




    </div>
  </nav>

<%= yield %>

</body>

<script type="text/javascript">
  $(".button-collapse").sideNav();
</script>

</html>
